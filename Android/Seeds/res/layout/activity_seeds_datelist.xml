<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/layout_befyesterday"
     	android:layout_width="fill_parent"
     	android:layout_height="100dp"
     	android:orientation="vertical"
	    android:background="@drawable/seedslist_selector"
	    android:layout_marginTop="@dimen/seeds_datalist_topmargin"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp">

     		<TextView
     		    android:id="@+id/date_befyesterday"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_marginLeft="5dp"
     		    android:layout_marginTop="3dp"
     		    android:gravity="left"
     		    android:text="@string/seeds_datelist_datedefault"
     		    android:textColor="@android:color/black"
     		    android:textSize="15sp" />

     		<TextView
     		    android:id="@+id/name_befyesterday"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:gravity="center"
     		    android:text="@string/seeds_datelist_befyesterday"
     		    android:textColor="@android:color/black"
     		    android:textSize="35sp" />
     		
     		<TextView
     		    android:id="@+id/seedsnumber_befyesterday"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_marginRight="5dp"
     		    android:gravity="right"
     		    android:text="@string/seeds_datelist_seedsnumberdefault"
     		    android:textColor="@android:color/black"
     		    android:textSize="15sp" />     	        	   
       </LinearLayout>

    <LinearLayout 
        android:id="@+id/layout_yesterday"
     	android:layout_width="fill_parent"
     	android:layout_height="100dp"
     	android:orientation="vertical"
	    android:background="@drawable/seedslist_selector"
	    android:layout_marginTop="@dimen/seeds_datalist_interval"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp">

     		<TextView
     		    android:id="@+id/date_yesterday"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_marginLeft="5dp"
     		    android:layout_marginTop="3dp"
     		    android:gravity="left"
     		    android:text="@string/seeds_datelist_datedefault"
     		    android:textColor="@android:color/black"
     		    android:textSize="15sp" />

     		<TextView
     		    android:id="@+id/name_yesterday"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:gravity="center"
     		    android:text="@string/seeds_datelist_yesterday"
     		    android:textColor="@android:color/black"
     		    android:textSize="35sp" />
     		
     		<TextView
     		    android:id="@+id/seedsnumber_yesterday"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_marginRight="5dp"
     		    android:gravity="right"
     		    android:text="@string/seeds_datelist_seedsnumberdefault"
     		    android:textColor="@android:color/black"
     		    android:textSize="15sp" />
     	        	   
       </LinearLayout>        

    <LinearLayout 
        android:id="@+id/layout_today"
     	android:layout_width="fill_parent"
     	android:layout_height="100dp"
     	android:orientation="vertical"
	    android:background="@drawable/seedslist_selector"
	    android:layout_marginTop="@dimen/seeds_datalist_interval"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp">

     		<TextView
     		    android:id="@+id/date_today"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_marginLeft="5dp"
     		    android:layout_marginTop="3dp"
     		    android:gravity="left"
     		    android:text="@string/seeds_datelist_datedefault"
     		    android:textColor="@android:color/black"
     		    android:textSize="15sp" />

     		<TextView
     		    android:id="@+id/name_today"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:gravity="center"
     		    android:text="@string/seeds_datelist_today"
     		    android:textColor="@android:color/black"
     		    android:textSize="35sp" />
     		
     		<TextView
     		    android:id="@+id/seedsnumber_today"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_marginRight="5dp"
     		    android:gravity="right"
     		    android:text="@string/seeds_datelist_seedsnumberdefault"
     		    android:textColor="@android:color/black"
     		    android:textSize="15sp" />
     	        	   
       </LinearLayout>     
           
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/update_btn"
            android:background="@drawable/seedslist_selector"                     
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:gravity="center"
        	android:layout_marginLeft="35dip"
        	android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:text="@string/seeds_datelist_update" />             
            
        <Button
        	android:id="@+id/httpserver_btn"  
        	android:layout_width="100dip"
        	android:layout_height="wrap_content"
        	android:background="@drawable/seedslist_selector"
        	android:layout_marginRight="35dip"
        	android:layout_marginTop="15dp"
        	android:gravity="center"
        	android:layout_alignParentRight="true"
        	android:text="@string/seeds_datelist_httpserver" />    
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    	
    	<Button
        	android:id="@+id/favlist_btn"
        	android:layout_width="100dip"
        	android:layout_height="wrap_content"
        	android:background="@drawable/seedslist_selector"
        	android:gravity="center"
        	android:layout_marginLeft="35dip"
        	android:layout_alignParentLeft="true"
        	android:layout_marginTop="15dp"
        	android:text="@string/seeds_datelist_favoritelist" /> 

       <Button
        	android:id="@+id/config_btn"
        	android:layout_width="100dip"
        	android:layout_height="wrap_content"
        	android:background="@drawable/seedslist_selector"
        	android:layout_marginRight="35dip"
        	android:layout_marginTop="15dp"
        	android:gravity="center"
        	android:layout_alignParentRight="true"
        	android:text="@string/seeds_datelist_config" />     

	</RelativeLayout>
</LinearLayout>